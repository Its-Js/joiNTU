<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="284dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle"
        android:id="@+id/head">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:scrollY="-10dp"
            android:src="@drawable/gee_me_001" />

    </LinearLayout>

    <TextView
        android:id="@+id/outputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Username"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSendFriendRequest"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/outputUsername"
        android:text="Send Friend Request"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:backgroundTint="#3F51B5"
        android:layout_marginRight="6dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/btnDeleteFriend"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendFriendRequest"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="delete friend"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#b53f49" />


</RelativeLayout>